<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        フォロー中　一覧
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-multiline">
    　<% @followings.each do |user| %>
    　　<div class="column is-3">
          <div class="card">
            <div class="card-content">
              <div class="card-image">
                <figure class="image">
    　            <%= link_to user_path(user) do %>
                    <%= image_tag user.profile_image.url, style: "border-radius: 50%; width: 200px; height: 200px; object-fit:cover;" %>
                 <% end %>
                </figure>
              </div>
            </div>
            <div class="card-content">
              <div class="media">
                <div class="media-content">
                  <div class="title"><%=link_to user.username, user_path(user) %></div>
                </div>
              </div>
               <div class="content">
                投稿数：<%= user.items.count %>
              </div>
              
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>